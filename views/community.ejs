<% layout("layouts/boilerplate") %>
<section class="vw-100 introSection communityIntro">
	<div class="jumbotron jumbotron-fluid homeJumbotron">
		<div class="container">
			<h1 class="display-2 upcomingEventsHeader">Community</h1>
		</div>
	</div>
	<% if(!currentUser) { %> 
	<a href="/register"><button class="offset-1 Submit">JOIN THE COMMUNITY</button></a>
	<% } %> 
</section>
<section>
<div class="row mt-5 communityBubbles">
	<section class="row offset-lg-1 mr-lg-4">
		<% for (let user of users) {%>
		<div class="communityCard ml-5 mt-5 offset-lg-1 " style="width: 10rem">
			<% if(user.images) { %> 
			 <a href="/community/<%= user._id %> "><img
				class="card-img-top userImage"
				src="<%= user.images.url %>"
				style="height: 10rem; width: 10rem;"
				alt=""
			/></a>
			<% } else {%>
				<a href="/community/<%= user._id %> "><img
				class="card-img-top userImage"
				src="noProfile.svg"
				style="height: 10rem; width: 10rem;"
				alt=""
			/></a>
			<% } %> 
				
			<div class="card-body">
				
				<p class="card-text text-muted Type">
					 <%=user.username %>
				</p>
				
			</div>
		</div>

		<%}%>
	</div>
	</section>

